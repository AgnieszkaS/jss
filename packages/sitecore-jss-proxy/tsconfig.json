{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // `paths` definition is needed to make `ts-node` happy for testing
    // `baseUrl` is needed in order for `paths` to work.
    "baseUrl": ".",
    "paths": {
      "http-proxy/lib/http-proxy/passes/web-outgoing": ["src/customTypes/http-proxy"]
    }
  },
  "exclude": ["node_modules", "types", "dist", "src/**/*.test.ts", "src/testData/*.ts"]
}
